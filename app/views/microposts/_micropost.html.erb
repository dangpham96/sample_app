<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.index_user.gravatar_img), micropost.user %>
  <span class="user"><%= link_to micropost.user_name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
<%= image_tag micropost.picture.url if micropost.picture? %>
    </span>
  <span class="timestamp">
    <%= t("microposts_show_user.tittle_microposts_show2") %>
    <%= time_ago_in_words(micropost.created_at) %>
    <%= t("microposts_show_user.tittle_microposts_show3") %>
    <% if current_user?(micropost.user) %>
      <%= link_to t("microposts_show_user.tittle_microposts_show7"), micropost, method: :delete,
        data: { confirm: t("microposts_show_user.tittle_microposts_show8") } %>
    <% end %>
  </span>
</li>
